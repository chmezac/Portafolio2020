    <script type="text/javascript">
        $("#btnPrint").live("click", function () {
            var divContents = $("#dvContainer").html();
            var printWindow = window.open('', '', 'height=400,width=800');



            printWindow.document.write('<html><head><title>Boleta</title>');
            printWindow.document.write('</head><body >');
            printWindow.document.write(divContents);
            printWindow.document.write('</body></html>');
            printWindow.document.close();
            printWindow.print();
        });
    </script>


</head>
<body>

    <form id="form1">
        <div id="dvContainer">
            <div id="register">
                <div id="ticket">
                    <h1>¡Muchas Gracias!</h1>
                    <br />
                    <table>

                        <tbody id="entries"></tbody>
                        <tfoot>
                            <tr>
                                <p>Valor de la compra: $<font id="amount"></font></p>
                                <p>Código de autorización:<font id="authorizationCode"></font></p>
                                <!--<p>Código de respuesta: <font id="responseCode"></font></p>-->

                                <script>
                                    document.getElementById('amount').innerHTML = window.localStorage.getItem('amount');
                                    document.getElementById('authorizationCode').innerHTML = window.localStorage.getItem('authorizationCode');
                                    //document.getElementById('responseCode').innerHTML = window.localStorage.getItem('responseCode');
                                </script>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <br />
        <div id="register">
            <input type="button" value="Descargar Boleta" id="btnPrint" class="btn-success" style="padding:4px;" />
            <br />
            <br />
            <input type="button" value="Salir" id="btnPrint" class="btn-danger" style="padding:4px;" onclick="window.location='http://localhost:50386/PedidoCliente/Index';" />




        </div>
        
    </form>

