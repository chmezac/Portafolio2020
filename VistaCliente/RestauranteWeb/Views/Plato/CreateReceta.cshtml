@model RestauranteDatos.RECETA

@{
    ViewBag.Title = "CreateReceta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar insumo a receta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" width: 70rem">
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems = ViewBag.items;


        }
        <div class="form-group">
            <label class="control-label col-md-2">Insumo</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.INSUMO_ID_INSUMO, listItems, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.INSUMO_ID_INSUMO, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Cantidad insumo</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CANTIDAD_UTILIZAR, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CANTIDAD_UTILIZAR, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model => model.PLATO_ID_PLATO, new { Value = ViewBag.plato.ID_PLATO })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-success" />
                @Html.ActionLink("Volver", "Details", new { id = ViewBag.plato.ID_PLATO }, new { @class = "btn btn-info" })
            </div>
        </div>
        <br />
    </div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
